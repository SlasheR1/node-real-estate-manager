    <script>
        // Функция для переключения режима редактирования
        function toggleEditMode(isEditing) { 
            const editSection = document.getElementById('editCompanySection'); 
            const editButton = document.querySelector('.edit-company-btn'); 
            
            if(editSection) {
                editSection.classList.toggle('hidden', !isEditing);
                
                // Плавная прокрутка к форме редактирования при открытии
                if (isEditing) {
                    setTimeout(() => {
                        editSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }, 300);
                }
            }
            
            if(editButton) {
                editButton.style.display = isEditing ? 'none' : 'inline-block';
            }
        }
        
        // Обработка предпросмотра логотипа
        const editLogoInput = document.getElementById('editCompanyLogo'); 
        const editLogoPreview = document.getElementById('editLogoPreview'); 
        
        if (editLogoInput && editLogoPreview) { 
            editLogoInput.addEventListener('change', function(event) { 
                const file = event.target.files[0]; 
                
                if (file && file.type.startsWith('image/')) { 
                    if (file.size > 1048576) { 
                        showCompanyJsMessage('error', 'Файл превышает 1MB. Выберите изображение меньшего размера.');
                        event.target.value = null; 
                        editLogoPreview.style.display = 'none'; 
                        return; 
                    } 
                    
                    const reader = new FileReader(); 
                    reader.onload = (e) => { 
                        editLogoPreview.src = e.target.result; 
                        editLogoPreview.style.display = 'block'; 
                        
                        // Добавляем анимацию для предпросмотра
                        editLogoPreview.style.animation = 'fadeIn 0.5s';
                    }; 
                    reader.readAsDataURL(file); 
                } else { 
                    editLogoPreview.src = '#'; 
                    editLogoPreview.style.display = 'none'; 
                    if(file) {
                        showCompanyJsMessage('error', 'Пожалуйста, выберите изображение.');
                        event.target.value = null;
                    }
                } 
            }); 
        }
        
        // Улучшенная функция для обработки индикатора загрузки на кнопках форм
        function setupFormSpinner(formId, buttonTextLoading = 'Обработка...') { 
            const form = document.getElementById(formId); 
            if (!form) return; 
            
            const button = form.querySelector('button[type="submit"]'); 
            if (!button) return; 
            
            const buttonTextSpan = button.querySelector('.button-text'); 
            const originalText = buttonTextSpan?.textContent || button.textContent; 
            
            form.addEventListener('submit', (event) => { 
                if (event.submitter && event.submitter !== button) return; 
                
                if (form.checkValidity()) { 
                    if(buttonTextSpan) buttonTextSpan.textContent = buttonTextLoading; 
                    button.disabled = true; 
                    
                    // Добавляем класс для анимации нажатия
                    button.classList.add('button-submitting');
                } else { 
                    setTimeout(() => { 
                        if(buttonTextSpan) buttonTextSpan.textContent = originalText; 
                        button.disabled = false;
                        button.classList.remove('button-submitting');
                    }, 100); 
                } 
            }); 
        }
        
        // Настраиваем все спиннеры форм
        setupFormSpinner('companyEditForm', 'Сохранение...');
        setupFormSpinner('addStaffForm', 'Добавление...');
        
        // Для форм в таблице персонала
        document.querySelectorAll('.staff-table form').forEach(form => {
            setupFormSpinner(form.id || `form-staff-remove-${Math.random().toString(36).substring(7)}`, 'Удаление...');
        });
        
        // Для форм в таблице аренд
        document.querySelectorAll('.company-rentals-section form').forEach(form => {
            setupFormSpinner(form.id || `form-rental-action-${Math.random().toString(36).substring(7)}`, '...');
        });
        
        // Улучшенная функция показа сообщений JavaScript
        function showCompanyJsMessage(type, text) { 
            const container = document.getElementById('js-company-messages'); 
            if (!container) return; 
            
            // Удаляем предыдущие сообщения
            container.innerHTML = ''; 
            
            // Создаем новое сообщение
            const messageDiv = document.createElement('div'); 
            messageDiv.className = `flash-message flash-${type}`; 
            messageDiv.innerHTML = `
                ${text} 
                <button type="button" class="close-flash" onclick="this.parentElement.remove()">×</button>
            `;
            
            // Добавляем сообщение в контейнер
            container.appendChild(messageDiv); 
            
            // Добавляем анимации
            messageDiv.style.animation = 'slideIn 0.4s ease-out';
            
            // Автоматически скрываем сообщение через 5 секунд
            setTimeout(() => { 
                if(messageDiv && messageDiv.parentNode) {
                    messageDiv.style.animation = 'fadeOut 0.5s ease-out forwards';
                    setTimeout(() => messageDiv.remove(), 500);
                }
            }, 5000); 
        }
        
        // Добавляем анимацию при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            // Последовательно показываем секции с небольшой задержкой
            const sections = document.querySelectorAll('.company-section');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                setTimeout(() => {
                    section.style.animation = 'fadeInUp 0.5s ease-out forwards';
                }, 100 * index);
            });
            
            // Добавляем "ripple" эффект на все кнопки
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    const rect = button.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    
                    const ripple = document.createElement('span');
                    ripple.className = 'ripple';
                    ripple.style.left = `${x}px`;
                    ripple.style.top = `${y}px`;
                    
                    button.appendChild(ripple);
                    
                    setTimeout(() => {
                        ripple.remove();
                    }, 600);
                });
            });
        });
        
        // Добавляем плавную прокрутку для всех внутренних ссылок
        document.querySelectorAll('a[href^="/"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                // Добавляем прозрачность для имитации клика
                this.style.opacity = '0.7';
                setTimeout(() => {
                    this.style.opacity = '1';
                }, 300);
            });
        });
    </script>
    
    <style>
        /* Добавляем стили для ripple-эффекта на кнопках */
        .btn {
            position: relative;
            overflow: hidden;
        }
        
        .ripple {
            position: absolute;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.4);
            transform: scale(0);
            animation: ripple-effect 0.6s linear;
            pointer-events: none;
            width: 100px;
            height: 100px;
            transform-origin: center;
        }
        
        @keyframes ripple-effect {
            from {
                transform: scale(0);
                opacity: 1;
            }
            to {
                transform: scale(4);
                opacity: 0;
            }
        }
        
        /* Улучшаем анимацию для мобильных устройств */
        @media (max-width: 768px) {
            .company-section {
                animation-duration: 0.3s;
            }
            
            @keyframes fadeInUp {
                from {
                    opacity: 0;
                    transform: translateY(10px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        }
        
        /* Дополнительная анимация для исчезновения сообщений */
        @keyframes fadeOut {
            from { opacity: 1; transform: translateY(0); }
            to { opacity: 0; transform: translateY(-20px); }
        }
        
        /* Улучшаем стиль для разделов при наведении */
        .company-section:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
            border-left: 3px solid var(--primary-color);
        }
        
        /* Улучшаем стиль для ячеек таблицы */
        .data-table tbody td {
            transition: background-color 0.2s;
        }
        
        .data-table tbody tr:hover td {
            background-color: rgba(52, 152, 219, 0.05);
        }
        
        /* Добавляем стиль для ссылок в таблицах */
        .data-table a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s, text-decoration 0.2s;
        }
        
        .data-table a:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }
        
        /* Улучшаем стиль для выбора файла логотипа */
        input[type="file"] {
            padding: 10px;
            border: 1px dashed var(--mid-gray);
            border-radius: var(--border-radius);
            background-color: #f8f9fa;
            cursor: pointer;
            transition: border-color 0.3s, background-color 0.3s;
        }
        
        input[type="file"]:hover {
            border-color: var(--primary-color);
            background-color: #f0f4f8;
        }
        
        /* Улучшаем дизайн checkbox */
        .checkbox-group {
            display: flex;
            align-items: center;
            margin: 10px 0;
        }
        
        .checkbox-group input[type="checkbox"] {
            width: auto;
            margin-right: 8px;
            accent-color: var(--primary-color);
        }
        
        /* Улучшаем подсветку строки при наведении */
        .data-table tbody tr {
            position: relative;
        }
        
        .data-table tbody tr::after {
            content: '';
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            background-color: transparent;
            pointer-events: none;
            transition: background-color 0.2s;
        }
        
        .data-table tbody tr:hover::after {
            background-color: rgba(52, 152, 219, 0.03);
        }
    </style>
</body>
